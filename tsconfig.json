{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "pretty": true,
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "node"
    },
    "include": [
        "./node_modules/reflect-metadata/Reflect.d.ts",
        "./src/**/*",
        "./tests/**/*"
    ]
}
